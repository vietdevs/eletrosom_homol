    <?php if ($block->getMessages()->count() && $block->getLimit()) :?>
    <br>
    <br>
    <b><?= __('Ticket History') ?></b><br>
        <?php foreach ($block->getMessages() as $message):?>
        <p>
            <i>
                <?php if ($message->getCustomerName()):?>
                    <?= $message->getCustomerName() ?>
